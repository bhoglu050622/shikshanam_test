{
  "buildCommand": "npm run build",
  "installCommand": "npm ci --prefer-offline",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096 --max-semi-space-size=64",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_WEBPACK_USEPERSISTENTCACHE": "1"
    }
  },
  "crons": [
    {
      "path": "/api/health",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "CRON_SECRET": "@cron-secret"
  }
}
