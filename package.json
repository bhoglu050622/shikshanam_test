{
  "name": "shikshanam",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3000",
    "build": "node build-with-polyfill.js",
    "build:fast": "NEXT_WEBPACK_USEPERSISTENTCACHE=1 next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start --port 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:components": "jest --selectProjects components",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:components && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "postinstall": "prisma generate",
    "clean": "rimraf .next .turbo .cache node_modules",
    "reinstall": "npm run clean && npm i",
    "dev:clean": "npm run clean && npm install && NEXT_WEBPACK_USEPERSISTENTCACHE=0 next dev",
    "build:clean": "npm run clean && npm install && npm run build",
    "devtools": "react-devtools",
    "type-check": "tsc --noEmit",
    "preview": "npm run build && npm run start",
    "db:migrate": "ts-node scripts/migrate-database.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node scripts/seed-database.ts",
    "setup": "./setup-env.sh",
    "dev:cms": "cd cms-admin && npm run dev",
    "build:cms": "cd cms-admin && npm run build",
    "start:cms": "cd cms-admin && npm run start"
  },
