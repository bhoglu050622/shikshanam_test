    "react-dom": "18.3.1",
    "react-intersection-observer": "^9.5.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.180.0",
    "uuid": "^13.0.0"
